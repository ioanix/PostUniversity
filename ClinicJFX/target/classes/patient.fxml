<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane fx:controller="sample.PatientEditController"
            xmlns:fx="http://javafx.com/fxml">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="First name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="patientFirstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Last name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="patientLastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Age" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="patientAgeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Age" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="consultationReasonField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Age" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneNumberField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
